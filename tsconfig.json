{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./src",
    "target": "es2016",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", ".env"]
}
